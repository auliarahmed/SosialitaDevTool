<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="dev.code.sosialitadevtool">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SosialitaDevTool">
        <activity
            android:name=".Menu"
            android:exported="true"
            android:label="@string/title_activity_menu"
            android:theme="@style/Theme.SosialitaDevTool.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Splashscreen"
            android:exported="true"
            android:label="@string/title_activity_splashscreen"
            android:theme="@style/Theme.SosialitaDevTool.NoActionBar">

        </activity>
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.SosialitaDevTool.NoActionBar"></activity>
    </application>

</manifest>